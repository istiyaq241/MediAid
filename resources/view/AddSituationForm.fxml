<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:controller="mediAid.controller.AddSituationController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="900" prefHeight="600"
            minWidth="900" minHeight="600"
            maxWidth="Infinity" maxHeight="Infinity"
            stylesheets="@../style/style.css">
    <VBox spacing="10" alignment="CENTER" layoutX="100" layoutY="20">
        <TextField fx:id="nameField" promptText="Your Name"/>
        <TextField fx:id="dateField" promptText="Date (YYYY-MM-DD)"/>
        <TextField fx:id="locationField" promptText="Location"/>
        <TextArea fx:id="situationField" promptText="Describe the situation..." prefHeight="100"/>
        <Button text="Submit" onAction="#submitSituation"/>
        <fx:include source="components/GlobalNav.fxml"/>
    </VBox>
</AnchorPane>
