<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="mediAid.controller.TreatmentPageController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="900" prefHeight="600"
            minWidth="900" minHeight="600"
            stylesheets="@../style/style.css">

    <top>
        <VBox spacing="5" alignment="CENTER">
            <Label text="🩺 Emergency Treatment Guidance" styleClass="header"/>
            <Label fx:id="conditionLabel"/>
        </VBox>
    </top>

    <!-- Keep only ONE node in center -->
    <center>
        <TextArea fx:id="treatmentTextArea"
                  wrapText="true"
                  editable="false"
                  prefHeight="300"
                  prefWidth="600">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </TextArea>
    </center>

    <right>
        <VBox spacing="10" alignment="TOP_CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="📌 Primary" onAction="#showPrimary"/>
            <Button text="✅ Final Advice" onAction="#showFinal"/>
            <Button text="⚠️ Warnings" onAction="#showWarnings"/>
            <fx:include source="/view/components/BackBar.fxml"/>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </bottom>

</BorderPane>
