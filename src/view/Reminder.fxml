<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ReminderController"
            prefWidth="600" prefHeight="500"
            style="-fx-background-color: #1e1e1e;">

    <children>
        <TableView fx:id="reminderTable" layoutX="50" layoutY="40" prefWidth="500" prefHeight="350">
            <columns>
                <TableColumn fx:id="nameCol" text="Name" prefWidth="150"/>
                <TableColumn fx:id="diseaseCol" text="Disease" prefWidth="150"/>
                <TableColumn fx:id="timeCol" text="Time Left" prefWidth="180"/>
            </columns>
        </TableView>

        <Button text="🔁 Refresh" layoutX="250" layoutY="410"
                onAction="#refreshReminders"
                style="-fx-background-color: #4caf50; -fx-text-fill: white;"/>

        <Button text="← Go Back" layoutX="230" layoutY="460"
                onAction="#goBack"
                style="-fx-background-color: #ff4c4c; -fx-text-fill: white;"/>
    </children>
</AnchorPane>
