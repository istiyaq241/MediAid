<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.TreatmentDisplayController"
            prefWidth="600" prefHeight="500"
            style="-fx-background-color: #1e1e1e;">

    <children>
        <VBox alignment="CENTER" spacing="20.0" layoutX="50" layoutY="40" prefWidth="500" prefHeight="400">
            <Label fx:id="conditionLabel" style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;" />
            <ImageView fx:id="conditionImage" fitHeight="160" fitWidth="160" />
            <Label fx:id="treatmentText" wrapText="true" maxWidth="500.0" style="-fx-text-fill: white;" />
        </VBox>

        <Button text="← Go Back" onAction="#goBack"
                layoutX="230" layoutY="460"
                style="-fx-background-color: #ff4c4c; -fx-text-fill: white;"/>
    </children>
</AnchorPane>
